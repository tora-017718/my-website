}

/* --------------------
    メインコンテンツ
   -------------------- */
main {
    max-width: 960px; /* コンテンツの最大幅を設定 */
    margin: 20px auto; /* 中央寄せ */
    padding: 20px;
    background-color: white;
    border-radius: 8px; /* 角を丸くする */
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1); /* 影を追加 */
}
section {
    margin-bottom: 30px; /* 各セクションの下に余白 */
    padding: 20px;
    border-bottom: 1px dashed #ccc; /* セクションの区切り線 */
}
section:last-child {
    border-bottom: none; /* 最後のセクションには線なし */
}

/* --------------------
    見出し
   -------------------- */
h2 {
